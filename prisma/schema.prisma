generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

enum Role {
  ADMIN
  EDITOR
  VIEWER
}

enum TaskStatus {
  PENDING
  RUNNING
  COMPLETED
  FAILED
}

// NextAuth required models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

// Application models
model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  microsoftId   String?   @unique
  role            Role             @default(VIEWER)
  theme           String           @default("dark")
  accounts        Account[]
  sessions        Session[]
  userPermissions UserPermission[]
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt
}

model Tenant {
  id              Int              @id @default(autoincrement())
  tenantName      String           @map("tenant_name")
  tenantAbbrv     String           @map("tenant_abbrv")
  tenantIdRewst   String           @map("tenantid_rewst")
  tenantIdMsft    String           @map("tenantid_msft")
  domainUrl       String?          @map("domain_url")
  regDttm         DateTime         @default(now()) @map("reg_dttm")
  regUser         String           @map("reg_user")
  automationTasks AutomationTask[]

  @@map("tenants")
}

model AutomationTask {
  id          String     @id @default(cuid())
  tenantId    Int
  tenant      Tenant     @relation(fields: [tenantId], references: [id], onDelete: Cascade)
  name        String
  description String?
  script      String?    @db.Text
  status      TaskStatus @default(PENDING)
  lastRunAt   DateTime?
  createdAt   DateTime   @default(now())
  updatedAt   DateTime   @updatedAt

  @@index([tenantId])
}

model MasterTask {
  id               Int     @id @default(autoincrement())
  taskName         String  @map("task_name")
  taskDetails      String? @map("task_details") @db.Text
  taskCode         String  @map("task_code")
  ticketRequired   Boolean @default(false) @map("ticket_required")
  usernameRequired Boolean @default(false) @map("username_required")
  syncRequired     Boolean @default(false) @map("sync_required")
  rewstWebhook     String? @map("rewst_webhook")
  tenantExclusive  String? @map("tenant_exclusive")
  taskGroup        String? @map("task_group")
  systemMgr        String?          @map("system_mgr")
  taskPermissions  TaskPermission[]

  @@map("tbmtasks")
}

model Permission {
  id                    Int              @id @default(autoincrement())
  permissionCode        String           @unique @map("permission_code")
  permissionDescription String?          @map("permission_description") @db.Text
  permissionEnabled     Boolean          @default(true) @map("permission_enabled")
  registeredBy          String           @map("registered_by")
  registeredDttm        DateTime         @default(now()) @map("registered_dttm")
  taskPermissions       TaskPermission[]
  userPermissions       UserPermission[]
  techPermissions       TechPermission[]

  @@map("tbmpermissions")
}

model TaskPermission {
  taskId       Int        @map("task_id")
  permissionId Int        @map("permission_id")
  task         MasterTask @relation(fields: [taskId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@id([taskId, permissionId])
  @@map("tbmtask_permissions")
}

model UserPermission {
  userId       String     @map("user_id")
  permissionId Int        @map("permission_id")
  user         User       @relation(fields: [userId], references: [id], onDelete: Cascade)
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)
  assignedAt   DateTime   @default(now()) @map("assigned_at")

  @@id([userId, permissionId])
  @@map("tbmuser_permissions")
}

model TechPermission {
  id           Int        @id @default(autoincrement())
  techName     String     @map("tech_name")
  techEmail    String     @map("tech_email")
  permissionId Int        @map("permission_id")
  permission   Permission @relation(fields: [permissionId], references: [id], onDelete: Cascade)

  @@unique([techEmail, permissionId])
  @@map("tbmtechpermissions")
}

model Technician {
  id             Int      @id @default(autoincrement())
  msftId         String   @unique @map("msft_id")
  displayName    String   @map("display_name")
  email          String   @unique
  jobTitle       String?  @map("job_title")
  accountEnabled Boolean  @default(true) @map("account_enabled")
  lastSyncAt     DateTime @default(now()) @map("last_sync_at")
  createdAt      DateTime @default(now()) @map("created_at")

  @@map("tbmtechnicians")
}
